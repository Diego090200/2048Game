#include <iostream>
#include <string>
#include <cstdlib>
#include <ctime>


using namespace std;

int random1(int c) {
	

	return rand() % c ;
}


class Game {

	int posicion_x;
	int posicion_y;
	int posicionx;
	int posiciony;
	int ntab;
	int direccion;
	int aux1;

public:

	Game(int ntab, int ran1, int ran2,int ran3,int ran4) {
		this->ntab = ntab;
		this->posicionx = ran1;
		this->posiciony = ran2;
		this->posicion_x = ran3;
		this->posicion_y = ran4;
	}

	void imprimirtabla()
	{

		cout << "    ";
		for (int n = 0; n < this->ntab; n++)
		{
			cout << " " << n << " ";
		}
		cout << endl;
		cout << "    ";
		for (int n = 0; n < this->ntab; n++)
		{
			cout << " - ";
		}
		cout << endl;
		for (int i = 0; i < this->ntab; i++)
		{
			cout << i << " | ";
			for (int j = 0; j < this->ntab; j++)
			{

				if (this->posicionx == j && this->posiciony == i )
				{
					cout << " 2 ";
				}
				else
				{
					cout << "   ";
				}
			}
			cout << endl;
		}

	}
	void subir() {

	}
	void bajar() {

	}
	void izquierda() {

	}
	void derecha() {

	}


};

int main()
{
	int op;
	srand(time(0));
	cout << "Con que tablero desea trabajar" << endl;
	cout << "" << endl;
	cout << " 1. Clasica (4 x 4)" << endl;
	cout << " 2. Extendida (6 x 6)" << endl;
	cout << " 3. Dificil (8 x 8)" << endl;
	cout << " 4. Compacta (3 x 3)" << endl;
	cout << "Ingrese una opcion" << endl;
	cin >> op;
	system("pause");
	system("cls");

	if (op == 1) {
		int c = 4;
		

		Game juego = Game(c, random1(c), random1(c),random1(c), random1(c));
		juego.imprimirtabla();
	}

	else if (op == 2) {
		int e = 6;

		Game juego = Game(e, random1(e), random1(e), random1(e), random1(e));
		juego.imprimirtabla();
	}

	else if (op == 3) {
		int d = 8;
		
		Game juego = Game(d, random1(d), random1(d), random1(d), random1(d));
		juego.imprimirtabla();
	}

	else if (op == 4) {
		int co = 3;

		Game juego = Game(co, random1(co), random1(co), random1(co), random1(co));
		juego.imprimirtabla();
	}

	else {
		int c = 4;

		Game juego = Game(c, random1(c), random1(c),random1(c), random1(c));
		juego.imprimirtabla();
	}
	return 0;
}
